<script language=JavaScript>

function rctracker(obj) {
  var s=s_gi('emgrelatedcontent');
  s.linkTrackVars='prop1,prop5,prop6,prop7,prop8,eVar1,events';
  s.linkTrackEvents='event5';
  s.events='event5';
  s.prop1='Related Content Article Click';
  s.prop5=document.title;
  s.prop6=document.URL;
  s.prop7=document.domain;
  s.prop8=obj.href;
  s.eVar1='Related Content Article Click';
  s.tl(obj,'e','');
}
</script>

<script type="text/javascript">
    function toggleContent(param,rnd) {
	    if (param==0) {
		    document.getElementById("articles_tab_" + rnd).setAttribute("class", "rel-tab-on");
		    document.getElementById("labs_tab_" + rnd ).setAttribute("class", "rel-tab-off");
		    document.getElementById("media_tab_" + rnd).setAttribute("class", "rel-tab-off");
		    document.getElementById("articles_tab_" + rnd).setAttribute("className", "rel-tab-on");
		    document.getElementById("labs_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("media_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("articles_" + rnd).style.visibility="visible";
		    document.getElementById("labs_" + rnd).style.visibility="hidden";
		    document.getElementById("media_" + rnd).style.visibility="hidden";
		    document.getElementById("articles_" + rnd).style.display="block";
		    document.getElementById("labs_" + rnd).style.display="none";
		    document.getElementById("media_" + rnd).style.display="none";
		}
		if (param==1) {
		    document.getElementById("articles_tab_" + rnd).setAttribute("class", "rel-tab-off");
		    document.getElementById("labs_tab_" + rnd).setAttribute("class", "rel-tab-on");
		    document.getElementById("media_tab_" + rnd).setAttribute("class", "rel-tab-off");
		    document.getElementById("articles_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("labs_tab_" + rnd).setAttribute("className", "rel-tab-on");
		    document.getElementById("media_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("articles_" + rnd).style.visibility="hidden";
		    document.getElementById("labs_" + rnd).style.visibility="visible";
		    document.getElementById("media_" + rnd).style.visibility="hidden";
		    document.getElementById("articles_" + rnd).style.display="none";
		    document.getElementById("labs_" + rnd).style.display="block";
		    document.getElementById("media_" + rnd).style.display="none";
		}
		if (param==2) {
		    document.getElementById("articles_tab_" + rnd).setAttribute("class", "rel-tab-off");
		    document.getElementById("labs_tab_" + rnd).setAttribute("class", "rel-tab-off");
		    document.getElementById("media_tab_" + rnd).setAttribute("class", "rel-tab-on");
		    document.getElementById("articles_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("labs_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("media_tab_" + rnd).setAttribute("className", "rel-tab-on");
		    document.getElementById("articles_" + rnd).style.visibility="hidden";
		    document.getElementById("labs_" + rnd).style.visibility="hidden";
		    document.getElementById("media_" + rnd).style.visibility="visible";
		    document.getElementById("articles_" + rnd).style.display="none";
		    document.getElementById("labs_" + rnd).style.display="none";
		    document.getElementById("media_" + rnd).style.display="block";									
		}
	}
   
