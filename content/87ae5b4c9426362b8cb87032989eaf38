<script type="text/javascript">
    function toggleContentvid(param,rnd) {
	    if (param==0) {
		    document.getElementById("eweek_tab_" + rnd).setAttribute("class", "rel-tab-on");
		    document.getElementById("newsbreak_tab_" + rnd ).setAttribute("class", "rel-tab-off");
		    document.getElementById("eweek_tab_" + rnd).setAttribute("className", "rel-tab-on");
		    document.getElementById("newsbreak_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("eweek_" + rnd).style.visibility="visible";
		    document.getElementById("newsbreak_" + rnd).style.visibility="hidden";
		    document.getElementById("eweek_" + rnd).style.display="block";
		    document.getElementById("newsbreak_" + rnd).style.display="none";
		}
		if (param==1) {
		    document.getElementById("eweek_tab_" + rnd).setAttribute("class", "rel-tab-off");
		    document.getElementById("newsbreak_tab_" + rnd).setAttribute("class", "rel-tab-on");
		    document.getElementById("eweek_tab_" + rnd).setAttribute("className", "rel-tab-off");
		    document.getElementById("newsbreak_tab_" + rnd).setAttribute("className", "rel-tab-on");
		    document.getElementById("eweek_" + rnd).style.visibility="hidden";
		    document.getElementById("newsbreak_" + rnd).style.visibility="visible";
		    document.getElementById("eweek_" + rnd).style.display="none";
		    document.getElementById("newsbreak_" + rnd).style.display="block";
		}
	}
</script>
