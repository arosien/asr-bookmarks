/**********************
***********************
*********************** DART FUNCTIONS FOR ZDE
***********************
**********************/

var n_mpu = 0;
var n_hpbox = 0;
var n_leader = 0;
var n_skyscraper = 0;
var n_micro = 0;
var rvar = 0;
var n_bottom = 0;
var tile_cntr = 0;

function showdart(typ, siz, ret, tilecntr) {

	var thistile=0;

	// Override optional args if they arent passed
	if (arguments.length < 4) {
		tilecntr=-1;
	}
	if (arguments.length < 3) {
		ret=0;
	}

	tile_cntr++;

	if (typ=="MPU") {
		n_mpu++;
		thistile = n_mpu;
	}
        if (typ=="HP_BOX") {
                n_hpbox++; 
                thistile = n_hpbox;
        }
	if (typ=="LEADER") {
		n_leader++;
		thistile = n_leader;
	}
	if (typ=="SKY") {
		n_skyscraper++;
		thistile = n_skyscraper;
	}
	if (typ=="MICRO") {
		n_micro++;
		thistile = n_micro;
	}
        if (typ=="BOTTOM") {
                n_bottom++; 
                thistile = n_bottom;
        }
	if (thistile < 1) {thistile=1};

	// retval = "tile=" + thistile + ";";

	if (tilecntr < 9999) {
		retval = "tile=" + tile_cntr + ";";
	} else {
		thistile = 3;
		retval = "tile=3;";
	}

	//var tmt = typ + ' ' + retval;
	if (tilecntr == 10) {
	    retval = "tile=100;";
        }

	if (thistile==1) {
		retval = retval + "pos=top;dcopt=ist;";
	}
	else {
		retval = retval + "pos=bottom;";
	}

	//var tmt = typ + ' tile:' + thistile + ' :***:' + retval;
	//alert(tmt);

	//var tvar = '<' + 'script type="text/javascript" language="JavaScript" src="http://ad.doubleclick.net/adj/entzd.eweek/healthcareit;zdtopic=healthcareit;zdtopic=database;zdtopic=enterpriseapps;zdtopic=itmanagement;zdtopic=;zdid=a522;zdtype=news;zdaudience=;zdproduct=;zdcompany=;zdpagetype=;u=zdtopic=healthcareit|zdtopic=database|zdtopic=enterpriseapps|zdtopic=itmanagement|zdid=a522|zdtype=news|zdaudience=|zdproduct=|zdcompany=|zdpagetype=;' + retval + 'sz=' + siz + ';ord=15965?"' + '><' + '/script>';
	var tvar = '<' + 'script type="text/javascript" language="JavaScript" src="http://ad.doubleclick.net/adj/entzd.eweek/healthcareit;zdtopic=healthcareit;zdtopic=database;zdtopic=enterpriseapps;zdtopic=itmanagement;zdtopic=;zdid=a522;zdtype=news;zdaudience=;zdproduct=;zdpagetype=;u=zdtopic=healthcareit|zdtopic=database|zdtopic=enterpriseapps|zdtopic=itmanagement|zdid=a522|zdtype=news|zdaudience=|zdproduct=|zdcompany=|zdpagetype=;' + retval + 'sz=' + siz + ';ord=15965?"' + '><' + '/script>';

	// alert(tvar);
	if (ret==1) {
		return(tvar);
	} else {
		document.write(tvar);
	}
}

function showdart2(typ, siz, rvar) {
	var thistile=0;
tile_cntr++;

	if (typ=="MPU") {
		n_mpu++;
		thistile = n_mpu;
	}
	if (typ=="LEADER") {
		n_leader++;
		thistile = n_leader;
	}
        if (typ=="HP_BOX") {
                n_hpbox++;
                thistile = n_hpbox;
        }
	if (typ=="SKY") {
		n_skyscraper++;
		thistile = n_skyscraper;
	}
	if (typ=="MICRO") {
		n_micro++;
		thistile = n_micro;
	}
	if (thistile < 1) {thistile=1};

	// retval = "tile=" + thistile + ";";
	if (rvar) {
		retval = "tile=" + rvar + ";";
	} else {
		retval = "tile=" + tile_cntr + ";";
	}

	if (thistile<=3) {
		retval = retval + "pos=top;dcopt=ist;";
	}
	else {
		retval = retval + "pos=bottom;";
	}

	//tvar = 'http://ad.doubleclick.net/adi/entzd.eweek/healthcareit;zdtopic=healthcareit;zdtopic=database;zdtopic=enterpriseapps;zdtopic=itmanagement;zdtopic=;zdid=a522;zdtype=news;zdaudience=;zdproduct=;zdcompany=;zdpagetype=;' + retval + 'sz=' + siz + ';ord=';
	tvar = 'http://ad.doubleclick.net/adi/entzd.eweek/healthcareit;zdtopic=healthcareit;zdtopic=database;zdtopic=enterpriseapps;zdtopic=itmanagement;zdtopic=;zdid=a522;zdtype=news;zdaudience=;zdproduct=;zdcompany=;zdpagetype=;' + retval + 'sz=' + siz + ';ord=';
	return tvar;
}

